
<% @newslinks.each_with_index do |newslink, index| %>
<% if newslink.flagged == false%>
  <div class="post">
  <div class="title"><%=(index+1)%>.  <a href="<%=newslink.link%>"><%= newslink.title %></a></div>

  <div class="info">
  
  <% points = newslink.up_votes - newslink.down_votes %> <%=points%> points | created at <%=newslink.created_at%> | 
  <a href="/newslink/<%= newslink.id %>"><%=newslink.comments.length %> COMMENTS</a> | 
  <a href="/newslink/<%= newslink.id %>/edit">EDIT</a> | 
  <a href="/newslink/<%= newslink.id %>/delete">DELETE</a> |
  <a href="/newslink/<%= newslink.id %>/flag">FLAG POST</a>
  </div>
  
  <div class="voting">  
    <form action="/newslink/<%= newslink.id %>/up_vote" method="post">
      <button name="up_votes" type="submit" value=1>Up Vote</button>
    </form>

    <form action="/newslink/<%= newslink.id %>/down_vote" method="post">
    <button name="down_votes" type="submit" value=1>Down Vote</button>
    </form>
  </div>
</div>
  <% end %>
<% end %>

