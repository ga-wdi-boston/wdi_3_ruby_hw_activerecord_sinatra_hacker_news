<div class="add-new-post-box">
  <h2>Edit this link:</h2>
    <form action="/newslink/<%= @newslink.id%>/update" method="post">
      <div>Title: <input type="text" name="title" value="<%=@newslink.title%>"></div>
      <div>Link: <input type="text" name="link" value="<%=@newslink.link%>"></div>
      <button type="submit">Update this post</button>
    </form>
</div>
